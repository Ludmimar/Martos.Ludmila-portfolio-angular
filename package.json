{
  "name": "portfolio-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200",
    "serve": "ng serve --port 4200",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage": "ng test --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:jest": "jest",
    "test:jest:coverage": "jest --coverage",
    "test:jest:watch": "jest --watch",
    "test:jest:ci": "jest --ci --coverage --watchAll=false",
    "test:jest:debug": "jest --detectOpenHandles --forceExit",
    "test:jest:update-snapshots": "jest --updateSnapshot",
    "test:jest:clear-cache": "jest --clearCache",
    "test:all": "npm run test:jest:ci && npm run test:coverage",
    "coverage:open": "open coverage/lcov-report/index.html",
    "coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "ng e2e",
    "serve:ssr:portfolio-angular": "node dist/portfolio-angular/server/server.mjs",
    "docker:build": "docker build -t portfolio-angular .",
    "docker:run": "docker run -p 80:80 portfolio-angular",
    "docker:dev": "docker-compose --profile dev up",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/portfolio-angular/browser/stats.json",
    "audit:performance": "node scripts/performance-audit.js",
    "audit:lighthouse": "lighthouse http://localhost:4200 --output=html --output-path=./lighthouse-report.html",
    "audit:bundle": "npm run build:prod -- --stats-json && npx webpack-bundle-analyzer dist/portfolio-angular/browser/stats.json",
    "precommit": "npm run lint:fix && npm run test:jest:ci",
    "prepush": "npm run test:all && npm run build:prod",
    "performance:check": "npm run audit:performance && npm run audit:bundle"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/platform-server": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@angular/ssr": "^20.2.1",
    "emailjs-com": "^3.2.0",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@angular/compiler-cli": "^20.2.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.19",
    "jasmine-core": "~5.9.0",
    "jest": "^30.1.3",
    "jest-preset-angular": "^15.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-jest": "^29.4.1",
    "typescript": "~5.9.2"
  }
}
